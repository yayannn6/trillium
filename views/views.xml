    <template id="report_invoice_document_trillium" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='page']" position="replace">
            <div class="page">
                 <table style="width: 80%; border-collapse: collapse; margin-top: 20px;">
                    <tr style="padding-bottom: 50px;">
                        <td style="width: 25%; vertical-align: top; padding-right: 20px;">
                            <p style="margin: 0; font-weight: bold;">Bill To:</p>
                        </td>
                        <td style="vertical-align: top; padding-left: 20px;">
                            <p style="margin: 0;" t-field="o.partner_id.name"/>
                            <p style="margin: 0;" t-field="o.partner_id.street"/>
                            <p style="margin: 0;" t-field="o.partner_id.street2"/>
                            <p style="margin: 0;" t-field="o.partner_id.city"/> <span t-field="o.partner_id.zip"/>
                            <p style="margin: 0;" t-field="o.partner_id.country_id.name"/>
                            <br/>
                            <br/>
                            
                        </td>
                    </tr>

                    <tr style="padding-bottom: 50px; margin-top: 30px;">
                        <td style="width: 25%; vertical-align: top; padding-right: 20px;">
                            <p style="margin: 0; font-weight: bold;">Attn:</p>
                        </td>
                        <td style="vertical-align: top; padding-left: 20px;">
                            <p style="margin: 0;">nanti tambahkan field atn </p> <!-- Jika ada field khusus untuk contact -->
                            <br/>
                            <br/>
                            
                        </td>
                    </tr>
                    
                    <tr style="padding-bottom: 50px; margin-top: 30px;">
                        <td style="width: 25%; vertical-align: top; padding-right: 20px;">
                            <p style="margin: 0; font-weight: bold;">Project:</p>
                        </td>
                        <td style="vertical-align: top; padding-left: 20px;">
                            <p style="margin: 0;" t-field="o.x_project_name"/> <!-- Field untuk nama project -->
                            <br/>
                            <br/>
                            
                        </td>
                    </tr>
                </table>

                <!-- Bagian Tabel Deskripsi Item -->
                <table class="table table-sm mt32" style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                    <thead>
                        <tr style="border-bottom: 2px solid black; border-top: 2px solid black;">
                            <th style="width: 10%; padding: 8px; text-align: left;">No</th>
                            <th style="width: 50%; padding: 8px; text-align: left;">Item Description</th>
                            <th style="width: 15%; padding: 8px; text-align: center;">QTY/UOM</th>
                            <th style="width: 15%; padding: 8px; text-align: center;">Price (SGD)</th>
                            <th style="width: 10%; padding: 8px; text-align: right;">Total Amount (SGD)</th>
                        </tr>
                    </thead>
                </table>

                <!-- Kalimat di bawah thead -->
                <p style="margin-top: 10px; font-style: italic;">To supply &amp; install the following:-</p>

                <!-- Tabel Body untuk Item -->
                <table class="table table-sm mt32" style="width: 100%; border-collapse: collapse;">
                    <tbody>
                      <t t-set="x" t-value="1"/>
                        <t t-foreach="o.invoice_line_ids" t-as="line">
                            <tr>
                                <td style="width: 10%; text-align: left; padding: 8px;">
                                  <span t-esc="x"/>
                                </td>
                                <td style="width: 50%;text-align: left; padding: 8px;">
                                    <t t-esc="line.name"/>
                                </td>
                                <td style="width: 15%; text-align: center; padding: 8px;">
                                    <t t-esc="line.quantity"/> <t t-esc="line.product_uom_id.name"/>
                                </td>
                                <td style="width: 15%; text-align: center; padding: 8px;">
                                    $ <t t-esc="line.price_unit"/>
                                </td>
                                <td style="width: 10%; text-align: right; padding: 8px;">
                                    $ <t t-esc="line.price_subtotal"/>
                                </td>
                            </tr>
                            <t t-set="x" t-value="x + 1"/>
                        </t>
                    </tbody>
                </table>

                <!-- Bagian Summary Invoice -->
                <table style="width: 100%; margin-top: 20px; border-collapse: collapse;">
                    <tbody>
                        <tr>
                            <td style="width: 70%; padding: 10px;"/>
                            <td style="width: 20%; padding: 10px; text-align: right;"><strong>Total:</strong></td>
                            <td style="padding: 10px; text-align: right;">
                                <strong>
                                    $ <t t-esc="o.amount_untaxed"/>
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 10px;"/>
                            <td style="padding: 10px; text-align: right;"><strong>Less Deposit:</strong></td>
                            <td style="padding: 10px; text-align: right;">
                                <strong>
                                    $ <t t-esc="o.amount_total - o.amount_residual"/>
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 10px;"/>
                            <td style="padding: 10px; text-align: right;"><strong>Balance:</strong></td>
                            <td style="padding: 10px; text-align: right;">
                                <strong>
                                    $ <t t-esc="o.amount_residual"/>
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 10px;"/>
                            <td style="padding: 10px; text-align: right;"><strong>9% GST:</strong></td>
                            <td style="padding: 10px; text-align: right;">
                                <strong>
                                    $ <t t-esc="o.amount_tax"/>
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 10px;"/>
                            <td style="padding: 10px; text-align: right;"><strong>Total SGD:</strong></td>
                            <td style="padding: 10px; text-align: right;">
                                <strong>
                                    $ <t t-esc="o.amount_total"/>
                                </strong>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
    </template>


  </data>
</odoo>